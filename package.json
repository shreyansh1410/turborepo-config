{
  "name": "turborepo-config",
  "version": "1.0.0",
  "description": "A monorepo scaffolding and configuration package for Turborepo-based projects, including React, Next.js, HTTP, and WebSocket backends.",
  "repository": {
    "type": "git",
    "url": "https://github.com/shreyansh1410/turborepo-config"
  },
  "author": "Shreyansh Shukla",
  "license": "MIT",
  "private": false,
  "keywords": [
    "turborepo",
    "monorepo",
    "react",
    "nextjs",
    "backend",
    "ws",
    "scaffold",
    "boilerplate"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.1",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
